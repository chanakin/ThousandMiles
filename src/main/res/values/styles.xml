<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="CardPileArea">
        <item name="android:layout_width">@dimen/card_pile_area_width</item>
        <item name="android:layout_height">@dimen/card_pile_area_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/card_pile_border</item>
        <item name="android:layout_marginRight">@dimen/card_pile_area_margin_right</item>
    </style>


    <style name="DeckArea">
        <item name="android:layout_width">@dimen/deck_area_width</item>
        <item name="android:layout_height">@dimen/deck_area_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/deck_holder</item>
        <item name="android:layout_marginBottom">@dimen/deck_area_margin_right</item>
    </style>

    <style name="HandOfCards">
        <item name="android:layout_width">@dimen/card_pile_area_width</item>
        <item name="android:layout_height">@dimen/card_pile_area_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/card_pile_border</item>
        <item name="android:layout_marginRight">@dimen/hand_card_margin_right</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
